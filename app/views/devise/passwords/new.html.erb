<div class="grid-x align-center login-form">
  <div class="cell medium-10 large-8">
    <h2>Forgot your password?</h2>
    <%= simple_form_for resource, url: password_path(resource_name) do |f| %>
      <%= f.input :email, input_html: { autofocus: true } %>
      <%= f.submit "Send me reset password instructions", class: "button success expanded" %>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
