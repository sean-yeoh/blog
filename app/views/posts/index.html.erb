<div class="grid-x grid-padding-x">
  <div class="cell large-9 small-order-2 large-order-1">
    <% @posts.each do |post| %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p class="subheader">Posted on <%= post.created_at.strftime("%A, %d %b %Y") %> by <%= post.admin&.name %></p>
        <hr>
        <%= post.content.html_safe %>
      </div>
    <% end %>
  </div>
  <div class="cell large-3 small-order-1 large-order-2">
    <h3>Archives</h3>
  </div>
</div>
